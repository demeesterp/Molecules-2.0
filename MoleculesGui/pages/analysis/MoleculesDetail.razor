@page "/moleculesdetail/{MoleculeId:int}"
<section class="mb-2">
    <h3 class="mb-2">Molecule : @CurrentMoleculeReport.MoleculeName</h3>
    <ul class="nav nav-tabs mb-2" id="MoleculeReportsTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" 
                    id="configuration-tab" data-bs-toggle="tab" 
                    data-bs-target="#configuration-tab-pane"
                    type="button" 
                    role="tab" 
                    aria-controls="configuration-tab-pane"
                    aria-selected="true">
                    Configuration
             </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" 
                    id="charge-tab" 
                    data-bs-toggle="tab" 
                    data-bs-target="#charge-tab-pane"
                    type="button" 
                    role="tab" 
                    aria-controls="charge-tab-pane"
                    aria-selected="false">
                    Charges
            </button>
        </li>
    </ul>
    <div class="tab-content  mb-2" id="MoleculeReportsTabContent">
        <div class="tab-pane fade show active"
                id="configuration-tab-pane"
                    role="tabpanel"
                    aria-labelledby="configuration-tab"
                    tabindex="0">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Atom</th>
                        <th scope="col">Configuration</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var atomItem in CurrentMoleculeReport.ReportItems)
                    {
                        <tr>
                            <td>
                                @atomItem.AtomID
                            </td>
                            <td>
                                <div class="d-flex flex-row">
                                    <div class="w-25">
                                        <b>Neutral:</b>
                                    </div>
                                    <div>@atomItem.Configuration</div>
                                </div>
                                <div class="d-flex flex-row">
                                    <div class="w-25">
                                        <b>Lewis Acid:</b>
                                    </div>
                                    <div>@atomItem.ConfigurationLewisAcid</div>
                                </div>
                                <div class="d-flex flex-row">
                                    <div class="w-25">
                                        <b>Lewis Base:</b>
                                    </div>
                                    <div>@atomItem.ConfigurationLewisBase</div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade"
             id="charge-tab-pane"
             role="tabpanel"
             aria-labelledby="charge-tab"
             tabindex="0">
           <table class="table">
               <thead>
                   <tr>
                        <th scope="col">Atom</th>
                        <th>Charge</th>
                        <th>Mulliken</th>
                        <th>Mulliken Acid</th>
                        <th>Mulliken Base</th>
                   </tr>
               </thead>
               <tbody>
                    @foreach (var atomItem in CurrentMoleculeReport.ReportItems)
                    {
                        <tr>
                            <td>
                                @atomItem.AtomID
                            </td>
                            <td>
                               @atomItem.CHelpGCharge
                            </td>
                            <td>
                                @atomItem.MullNeutral
                            </td>
                            <td>
                                @atomItem.MullLewisAcid
                            </td>
                            <td>
                                @atomItem.MullLewisBase
                            </td>
                        </tr>
                    }
               </tbody>
           </table>
        </div>
    </div>
   
</section>

